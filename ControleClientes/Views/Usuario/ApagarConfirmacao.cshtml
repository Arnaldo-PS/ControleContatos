@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}
 <div class="text-center">
    <h3>Deseja realmente apagar o usuário (@Model.Nome)?</h3>
 </div>

 <div class="d-grid gap-2">
    <a role="button" class="btn btn-success" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar</a>
    <a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="Index">Cancelar</a>
 </div>